{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES5",
    "experimentalDecorators": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
